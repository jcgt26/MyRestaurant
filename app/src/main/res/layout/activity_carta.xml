<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cartavirtual.juanguzman.myrestaurant.CartaActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnEntradas"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="132dp"
            android:text="Entrada" />

        <Button
            android:id="@+id/btnPlatoFuerte"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignTop="@+id/btnEntradas"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/btnEntradas"
            android:layout_toRightOf="@+id/btnEntradas"
            android:text="Plato Fuerte" />

        <Button
            android:id="@+id/btnPostre"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignLeft="@+id/btnEntradas"
            android:layout_alignStart="@+id/btnEntradas"
            android:layout_below="@+id/btnEntradas"
            android:layout_marginTop="34dp"
            android:text="Postres" />

        <Button
            android:id="@+id/btnBebidas"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignBottom="@+id/btnPostre"
            android:layout_alignEnd="@+id/btnPlatoFuerte"
            android:layout_alignRight="@+id/btnPlatoFuerte"
            android:text="Bebidas" />

        <TextView
            android:id="@+id/txtTituloCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:fontFamily="cursive"
            android:text="Seleccione la carta"
            android:textSize="30sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
