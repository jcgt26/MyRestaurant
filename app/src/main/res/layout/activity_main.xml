<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cartavirtual.juanguzman.myrestaurant.MainActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="563dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="80dp">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:fontFamily="cursive"
            android:text="Bienvenido  a MyRestaurant"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnVerUbicacion"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:onClick="lanzarMapa"
            android:text="Ver Ubicacion" />

        <Button
            android:id="@+id/btnVerCarta"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:onClick="LanzarCarta"
            android:text="Ver Carta" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="261dp"
            app:srcCompat="@drawable/noun_975397_cc" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
